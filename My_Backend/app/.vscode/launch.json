{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Python: FastAPI",
        "type": "python",
        "request": "launch",
        "program": "${workspaceFolder}/venv/Scripts/uvicorn",
        "args": [
          "app.main:app",
          "--reload",
          "--host",
          "127.0.0.1",
          "--port",
          "8000"
        ],
        "env": {
          "PYTHONPATH": "${workspaceFolder}"
        },
        "jinja": true,
        "console": "integratedTerminal"
      }
    ]
  }